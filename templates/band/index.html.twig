{% extends 'base.html.twig' %}

{% block title %}Band index{% endblock %}

{% block body %}
    <h1>Band index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Style</th>
                <th>Picture</th>
                <th>CreationYear</th>
                <th>LastAlbumName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.id }}</td>
                <td>{{ band.name }}</td>
                <td>{{ band.style }}</td>
                <td>{{ band.picture }}</td>
                <td>{{ band.creationYear ? band.creationYear|date('Y-m-d') : '' }}</td>
                <td>{{ band.lastAlbumName }}</td>
                <td>
                    <a href="{{ path('band_show', {'id': band.id}) }}">show</a>
                    <a href="{{ path('band_edit', {'id': band.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('band_new') }}">Create new</a>
{% endblock %}
