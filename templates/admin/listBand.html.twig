{# concert/list.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <table class="table">
    <thead>
    <tr>
        <th scope="col">Groupe</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for band in bands %}
        <tr>
            <td href="{{ path('band_show', {id: band.id}) }}">{{ band.name }}</td>

            <td>
                <a href="{{ path('band_edit', {id: band.id}) }}"
                   role="button" class="btn btn-primary">Mettre à jour</a>
                <a href="{{ path('band_delete', {id: band.id}) }}"
                   role="button" class="btn btn-danger">Supprimer</a>

            </td>

        </tr>
    {% endfor %}
    </tbody>
</table>
    <div>
        <a href="{{ path('band_create') }}">
            Créer un nouveau Groupe</a>
    </div>
</div>
{% endblock %}
